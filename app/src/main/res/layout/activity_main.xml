<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:textColor="@color/textcolor"
        android:background="@color/colorPrimary"
        android:text="Add Your Bank Detail" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:text="BENEFICIARY'S NAME"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/benef_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:singleLine="true"
        android:textSize="@dimen/hint"
        android:backgroundTint="#C4C2C2"
        android:textColor="@color/textcolor"
        android:imeOptions="actionNext"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:drawablePadding="10dp" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:text="BENEFICIARY'S BANK NAME"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/benef_bank_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:backgroundTint="#C4C2C2"
        android:textSize="@dimen/hint"
        android:textColor="@color/textcolor"
        android:imeOptions="actionNext"
        android:drawablePadding="10dp" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:text="BENEFICIARY'S ACCOUNT NUMBER"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/benef_acc_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/hint"
        android:backgroundTint="#C4C2C2"
        android:textColor="@color/textcolor"
        android:imeOptions="actionNext"
        android:drawablePadding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:text="SWIFT CODE/BIC CODE"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/benef_swif_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:imeOptions="actionNext"
        android:backgroundTint="#C4C2C2"
        android:maxLength="8"
        android:singleLine="true"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/hint" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:text="SWIFT CODE2"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/benef_wift2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="@dimen/hint"
        android:backgroundTint="#C4C2C2"
        android:textColor="@color/textcolor"
        android:imeOptions="actionNext"
        android:maxLength="11"
        android:drawablePadding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:text="BRANCH NAME"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/benef_branchname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:textSize="@dimen/hint"
        android:backgroundTint="#C4C2C2"
        android:textColor="@color/textcolor"
        android:imeOptions="actionNext"
        android:drawablePadding="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="16dp"
        android:outlineSpotShadowColor="#EB1734"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="@dimen/heading"
        app:cardElevation="12dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/pading"
            android:background="@color/btn_bg"
            android:textSize="18sp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#ffff" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout></ScrollView>